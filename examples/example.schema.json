{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Example JSON Schema",
    "type": "object",
    "properties": {
        "someNumber": {
            "type": "number",
            "default": 420.69
        },
        "someObject": { "$ref": "#/$defs/someObject"},
        "someBoolean": { "$ref": "#/$defs/someBoolean"}
    },
    "additionalProperties": false,
    "unevaluatedProperties": false,
    "$defs": {
        "someBoolean": {
            "type": "boolean",
            "default": true
        },
        "someObject": {
            "type": "object",
            "properties": {
                "someString": {
                    "type": "string",
                    "default": "abc"
                },
                "anotherString": {
                    "type": "string",
                    "default": "Default string for anotherString"
                }
            },
            "allOf": [
                {
                    "if": { "properties": { "someString": {"const": "abc"} } },
                    "then": { "properties": {
                        "conditionalNumber": {"type": "number", "default": 69},
                        "conditionalObject": {
                            "type": "object",
                            "default": {
                                "someString": "goodbye",
                                "someNumber": 9001
                            }
                        }
                        } }
                },
                {
                    "if": { "properties": { "someString": {"const": "xyz"} } },
                    "then": { "properties": {
                        "conditionalObject": {
                            "type": "object",
                            "default": {
                                "someString": "goodbye",
                                "someNumber": -100
                            }
                        }
                        } }
                }
            ]
        }
    }
}