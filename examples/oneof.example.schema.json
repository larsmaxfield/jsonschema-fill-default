{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Example JSON Schema with One Of",
    "type": "object",
    "unevaluatedProperties": false,
    "properties": {
        "defaultFalseBoolean": {
            "type": "boolean",
            "default": false
        }
    },
    "oneOf": [
        { "$ref": "#/$defs/objectA"},
        { "$ref": "#/$defs/objectB"}
    ],
    "$defs": {
        "objectA": {
            "type": "object",
            "properties": {
                "someString": {
                    "type": "string",
                    "default": "A",
                    "enum": ["A", "AA", "AAA"]                    
                },
                "someNumber": {
                    "type": "number",
                    "default": 0
                }
            }
        },
        "objectB": {
            "type": "object",
            "properties": {
                "someString": {
                    "type": "string",
                    "default": "B",
                    "enum": ["B", "BB", "BBB"]                    
                },
                "someNumber": {
                    "type": "number",
                    "default": 7
                }
            }
        }
    }
}